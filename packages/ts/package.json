{
	"name": "@gleam-tools/ts",
	"type": "commonjs",
	"version": "0.0.1",
	"description": "get type safety when importing .gleam from javascript",
	"author": "Jose Albizures <jose@albizures.com> (https://albizures.com/)",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/albizures/gleam-tools/tree/main/packages/ts-gleam"
	},
	"main": "./dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "run-s build:*",
		"build:ts": "tsc",
		"build:ts:dev": "tsc --watch",
		"test": "run-s test:unit test:types test:jsr",
		"test:use": "knip",
		"test:unit": "vitest run",
		"test:unit:dev": "vitest",
		"test:types": "tsc --noEmit",
		"test:jsr": "jsr publish --dry-run",
		"release:bump": "standard-version",
		"release:jsr-sync": "jsr-sync --section=exports",
		"release:publish": "pnpm publish --access public",
		"publish:jsr": "jsr publish",
		"release": "run-s test build release:jsr-sync release:bump release:publish"
	},
	"dependencies": {
		"@gleam-tools/utils": "^0.0.3",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"@types/node": "^22.10.5",
		"@vyke/jsr-sync": "^0.0.4",
		"jsr": "^0.13.2",
		"knip": "^5.42.0",
		"npm-run-all": "^4.1.5",
		"standard-version": "^9.5.0",
		"typescript": "^5.2.2",
		"unbuild": "^3.2.0"
	}
}
